<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--&lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;     -->
	    <!--<item name="android:dropDownListViewStyle">@style/DropDownListView</item>-->
    </style>


    <style name="SplashTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="CustomAlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textSize">13dp</item>
    </style>
    <style name="EditTextAlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textSize">13dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDarkAlertDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:textSize">13dp</item>
    </style>
    <style name="EditTextDarkAlertDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:textSize">13dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
